FROM nginx:alpine

# Coming Soon HTML sayfasını kopyala
COPY coming-soon/index.html /usr/share/nginx/html/index.html

# Nginx config
RUN echo 'server { \
    listen 80; \
    server_name _; \
    root /usr/share/nginx/html; \
    index index.html; \
    location / { \
        try_files $uri $uri/ /index.html; \
    } \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 80
